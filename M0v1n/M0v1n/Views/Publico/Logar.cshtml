@model IEnumerable<M0v1n.Models.Usuario>

@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewBag.Title = "Login";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <br />
    <div class="row text-center" style="padding-top:40px;">
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="well-left">
                <div class="single-well">
                    <a href="#">
                        <img src="~/Content/img/movin-trans.png" class="img-responsive"/>
                    </a>
                </div>
            </div>
        </div>
        <div class="form contact-form col-md-offset-6" style="padding-top:40px;">
            <h3>Faça seu login para acessar a Movin</h3>
            <hr />
            <form class="contactForm">
                <div class="form-group">
                    <input type="text" name="email" class="form-control" id="email" placeholder="Seu Email" data-rule="email" data-msg="Digite um email válido" />
                    <div class="validation"></div>
                </div>
                <div class="form-group">
                    <input type="password" name="senha" class="form-control" id="senha" placeholder="Sua Senha" data-rule="minlen:3" data-msg="Digite uma senha válida" />
                    <div class="validation"></div>
                </div>

                <div class="text-center"><button type="submit" value="Entrar">Entrar</button></div>
            </form>
        </div>
    </div>
}
